<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ImageButton
        android:id="@+id/activity_button"
        android:layout_width="155dp"
        android:layout_height="170dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/main_button_bakcground"
        android:scaleType="fitStart"
        android:src="@drawable/icon_weight_4760791"
        app:layout_constraintEnd_toStartOf="@+id/food_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/sleep_button"
        android:layout_width="155dp"
        android:layout_height="170dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/main_button_bakcground"
        android:scaleType="fitStart"
        android:src="@drawable/dark_mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/water_button"
        app:layout_constraintTop_toBottomOf="@+id/food_button" />

    <ImageButton
        android:id="@+id/food_button"
        android:layout_width="155dp"
        android:layout_height="170dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/main_button_bakcground"
        android:scaleType="fitStart"
        android:src="@drawable/icon_calories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/activity_button"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/water_button"
        android:layout_width="155dp"
        android:layout_height="170dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/main_button_bakcground"
        android:scaleType="fitStart"
        android:src="@drawable/glass_of_water"
        app:layout_constraintEnd_toStartOf="@+id/sleep_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_button" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/nunitolight"
        android:text="Активность"
        android:textColor="@color/main_button"
        android:textSize="20dp"

        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/activity_button"
        app:layout_constraintEnd_toEndOf="@+id/activity_button"
        app:layout_constraintStart_toStartOf="@+id/activity_button"
        app:layout_constraintTop_toTopOf="@+id/activity_button" />

    <TextView
        android:id="@+id/textView70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/nunitolight"
        android:text="Питание"
        android:textColor="@color/main_button"

        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/food_button"
        app:layout_constraintEnd_toEndOf="@+id/food_button"
        app:layout_constraintStart_toStartOf="@+id/food_button"
        app:layout_constraintTop_toTopOf="@+id/food_button" />

    <TextView
        android:id="@+id/textView50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/nunitolight"
        android:text="Водный баланс"

        android:textColor="@color/main_button"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/water_button"
        app:layout_constraintEnd_toEndOf="@+id/water_button"
        app:layout_constraintStart_toStartOf="@+id/water_button"
        app:layout_constraintTop_toTopOf="@+id/water_button" />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/nunitolight"

        android:text="Сон"
        android:textColor="@color/main_button"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/sleep_button"
        app:layout_constraintEnd_toEndOf="@+id/sleep_button"
        app:layout_constraintStart_toStartOf="@+id/sleep_button"
        app:layout_constraintTop_toTopOf="@+id/sleep_button" />


</androidx.constraintlayout.widget.ConstraintLayout>